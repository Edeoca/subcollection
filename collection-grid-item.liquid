<div class="grid__item card text-center">
  {% capture collection_title %}{{ collections[featured].title | escape }}{% endcapture %}

  <a href="{{ collections[featured].url }}" title="{{collections[featured].title | escape}}" class="grid-link--focus">
    <span class="grid-link__image grid-link__image--collection">
      <span class="grid-link__image-centered">
        {% if collections[featured].image %}
          {{ collections[featured].image.src | img_url: '240x240', crop:"center" | img_tag: collection_title }}
        {% else %}
          {{ collections[featured].products.first.featured_image | img_url:  '240x240', crop:"center" | img_tag: collection_title , "img img-responsive"}}
        {% endif %}
      </span>
    </span>
    <p class="grid-link__title">{{ collections[featured].title }}</p>
    {% if settings.home_featured_desc_enable %}
      <p class="grid-link__meta"><small>{{ collections[featured].description | strip_html | truncatewords: 20 }}</small></p>
    {% endif %}
  </a>
</div>
